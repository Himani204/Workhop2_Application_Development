@page "/products"
@layout ProductLayout

<h3>Products</h3>

<div class="d-flex flex-wrap">
    @foreach (var product in Products)
    {
        <ProductCard 
            Name="@product.Name"
            ImageUrl="@product.ImageUrl"
            Price="@product.Price"
            Likes="@product.Likes" />
    }
</div>

@code {
    List<Product> Products = new()
    {
        new Product { Name="Laptop", Price=80000, Likes=20, ImageUrl="images/laptop.png" },
        new Product { Name="Mobile", Price=50000, Likes=35, ImageUrl="images/mobile.png" },
        new Product { Name="Tablet", Price=30000, Likes=15, ImageUrl="images/tablet.png" },
        new Product { Name="Watch", Price=15000, Likes=25, ImageUrl="images/watch.png" },
        new Product { Name="Headphones", Price=8000, Likes=40, ImageUrl="images/headphone.png" }
    };

    class Product
    {
        public string Name { get; set; }
        public decimal Price { get; set; }
        public int Likes { get; set; }
        public string ImageUrl { get; set; }
    }
}
